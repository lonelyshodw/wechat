<!--pages/index/index-item-template/index-item-template.wxml-->
<template name="postItem">
    <view class="post-container">
        <view class="post-author-date">
            <image class="post-author" src="{{avatar}}"/>
            <text class="post-date">{{date}}</text>
        </view>
        <text class="post-title">{{title}}</text>
        <image class="post-image" src="{{imgSrc}}" />
        <text class="post-content">{{content}}</text>
        <view class="post-like">
            <image class="post-like-image" src="/image/icon/chat.png" />
            <text class="post-like-font">{{reading}}</text>
            <image class="post-like-image" src="/image/icon/view.png" />
            <text class="post-like-font">{{collection}}</text>
        </view>
    </view>
</template>